<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.leandrotdasilva.sispedv4.AddUsuario">


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:padding="8dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:hint="Nome"
            android:padding="8dp"
            android:textColor="@color/my_accentcolor" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:padding="8dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:hint="Tel/Cel:"
            android:inputType="phone"
            android:padding="8dp"
            android:textColor="@color/my_accentcolor" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:padding="8dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:hint="Login"
            android:padding="8dp"
            android:textColor="@color/my_accentcolor" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:padding="8dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:hint="Senha"
            android:padding="8dp"
            android:textColor="@color/my_accentcolor" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/lbl_Perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="6dp"
        android:text="Perfil"
        android:textColor="@color/my_accentcolor"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spn_Perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:foreground="@android:color/background_light" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_Add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="4dp"
        android:layout_marginTop="40dp"
        android:clickable="true"
        app:backgroundTint="@color/myAddColor"
        app:elevation="16dp"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_save_black_24dp" />
</LinearLayout>